<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/blackk"
    >
    <include
        android:id="@+id/toolbar6"
        layout="@layout/toolbar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:layout_below="@id/toolbar6"/>
    <Button
        android:id="@+id/checkData"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Check Data"
        android:layout_below="@id/recyclerView6"
        android:layout_marginTop="350dp"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/goToAdd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"
        android:layout_below="@id/recyclerView6"
        android:layout_marginTop="350dp"
        android:text="Go to Add"
        android:textColor="#fff"
        />

</RelativeLayout>